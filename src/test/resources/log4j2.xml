<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-3L %-5level %logger{36} - %msg%n"/>
        </Console>
    </appenders>

    <loggers>
        <root level="TRACE">
            <appender-ref ref="Console"/>
        </root>
        <logger name="org.mongodb" level="error">
            <appender-ref ref="Console"/>
        </logger>
    </loggers>
</configuration>
